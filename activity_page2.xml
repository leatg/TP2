<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".infoHeros">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F3F3F3">

        <RadioGroup
            android:id="@+id/radioGroupGenre"
            android:layout_width="259dp"
            android:layout_height="wrap_content"
            android:paddingLeft="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextNom"
            app:layout_constraintVertical_bias="0.096">

            <RadioButton
                android:id="@+id/radioBtnHomme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:text="Homme"
                android:textColorHighlight="#000000"
                android:textColorLink="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:useMaterialThemeColors="false" />

            <RadioButton
                android:id="@+id/radioBtnFemme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:text="Femme"
                android:textColorHighlight="#000000"
                android:textColorLink="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:useMaterialThemeColors="false" />

            <RadioButton
                android:id="@+id/radioBtnND"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:text="Non déterminé"
                android:textColorHighlight="#000000"
                android:textColorLink="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:useMaterialThemeColors="false" />
        </RadioGroup>

        <EditText
            android:id="@+id/editTextNom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="serif-monospace"
            android:hint="Nom"
            android:inputType="textPersonName"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtHeros"
            app:layout_constraintVertical_bias="0.131" />

        <TextView
            android:id="@+id/txtHeros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:text="Héros"
            android:textColor="#0E0E0E"
            android:textSize="48sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.023" />

        <EditText
            android:id="@+id/editTextSante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="serif-monospace"
            android:hint="Santé(nombre)"
            android:inputType="number"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioGroupGenre"
            app:layout_constraintVertical_bias="0.111" />

        <EditText
            android:id="@+id/editTextMunitions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="serif-monospace"
            android:hint="Munitions(nombre)"
            android:inputType="number"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.513"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextSante"
            app:layout_constraintVertical_bias="0.203" />

        <Button
            android:id="@+id/btnSuivantHeros"
            android:layout_width="310dp"
            android:layout_height="56dp"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="serif-monospace"
            android:text="Suivant"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextMunitions"
            app:layout_constraintVertical_bias="0.471"
            app:strokeColor="#561313"
            app:strokeWidth="2dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>